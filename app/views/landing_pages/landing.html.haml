#page
%header#header.site-header
  %nav#navbar.site-navbar.navbar.navbar-static-top{:role => "navigation"}
    .container
      .navbar-header
        %button.navbar-toggle{"data-target" => "#navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
          %span.sr-only Toggle navigation
          %i.fa.fa-bars
        %h1.navbar-brand
          %i.fa.fa-birthday-cake
          %a{:href => "index.html"} Cake
      #navbar-collapse-1.collapse.navbar-collapse
        %ul#navigation.nav.navbar-nav.navbar-right
          %li.active
            %a.current{:href => "#header"} Home
          %li
            %a{:href => "#features"} How It Works
          %li
            %a{:href => "#testimonials"} Testimonials
          %li
            %a{:href => "#pricing"} Pricing
          %li
            %a.external{:href => "/signup"} Sign Up
          %li
            %a.external{:href => "/signin"} Sign In
%main#main.site-main
  %section#carousel-1.carousel.slide.section-slide{"data-ride" => "carousel"}
    .carousel-inner
      .item.active{:style => "background: url(assets/background/coffeeshop2-fulldark.jpg);"}
        .container
          %img{:alt => "First slide", :src => "assets/background/bring_customers_back.png"}/
      .item{:style => "background: url(assets/background/bakery1-fulldark.jpg);"}
        .container
          %img{:alt => "Second slide", :src => "assets/background/bring_customers_back.png"}/
    -#   .item{:style => "background: url(images/bg-3.jpg);"}
    -#     .container
    -#       %img{:alt => "Third slide", :src => "http://placehold.it/640x340"}/
    -# %a.left.carousel-control{"data-slide" => "prev", :href => "#carousel-1"}
      %span.fa.fa-chevron-left
    %a.right.carousel-control{"data-slide" => "next", :href => "#carousel-1"}
      %span.fa.fa-chevron-right

  %section#features.section.section-center.section-hilite.section-features
    .container
      %h2.section-title
        %span How it works?
      .row
        .col-md-4.col-sm-6
          .icon-wrap
            %img{:class => "flyer", :src => "assets/landing_page/flyer.png"}/
          %h4 Post a flyer in your store
          %p Collect your customer's email addresses with a simple web page we provide.
        .col-md-4.col-sm-6
          .icon-wrap
            %img{:alt => "", :src => "assets/landing_page/mail.png"}/
          %h4 Decided on a monthly deal for your customers
          %p We'll send out one email each month to your customers with the deal you created.
        .col-md-4.col-sm-6
          .icon-wrap
            %img{:alt => "", :src => "assets/landing_page/bag.png"}/
          %h4 Redeem the deal
          %p Greet your customers when they come back to see you.

  %section.section.section-center.section-cta
    .container
      %h2.section-title
        %span Ready to Start?
      %p Sign up now and to start generating more traffic to your store of location.
      .main-action.row
        .col-md-3.col-md-offset-3.col-sm-4.col-sm-offset-2
          %a.smooth-scroll.btn.btn-lg.btn-block.btn-danger{:href => "/signup"} Sign Up
        .col-md-3.col-sm-4
          %a.smooth-scroll.btn.btn-lg.btn-block.btn-default{:href => "#contact"} Request a Call


  %section#testimonials.section.section-center.section-hilite.section-testimonial
    .container
      %h2.section-title
        %span What our clients say?
      %i.fa.fa-quote-left.fa-3x
      #carousel-example-generic.carousel.slide{"data-ride" => "carousel"}
        .carousel-inner
          .item.active
            %blockquote
              %p Super easy to use. I spend 15 min a month coming up with new deals. The rest is automatic.
              %small
                Misha Chellam
                %cite{:title => "Source Title"}  | Leadership Bakery
          .item
            %blockquote
              %p Definitely increased repeat business each time the deal email goes out.
              %small
                Janardin Yri
                %cite{:title => "Source Title"} | Swift Roasters
          .item
            %blockquote
              %p Cake lets me focus on my food while they focus on reaching out to my customers.
              %small
                Russel Klusas
                %cite{:title => "Source Title"} | Big Picture Deli
        %ol.carousel-indicators
          %li.active{"data-slide-to" => "0", "data-target" => "#carousel-example-generic"}
            %img.img-circle{:alt => "", :height => "64", :src => "assets/landing_page/misha.jpg", :width => "64"}/
          %li{"data-slide-to" => "1", "data-target" => "#carousel-example-generic"}
            %img.img-circle{:alt => "", :height => "64", :src => "assets/landing_page/janardan.jpg", :width => "64"}/
          %li{"data-slide-to" => "2", "data-target" => "#carousel-example-generic"}
            %img.img-circle{:alt => "", :height => "64", :src => "assets/landing_page/russ.jpg", :width => "64"}/

  %section#pricing.section.section-center.section-pricing
    .container
      %h2.section-title
        %span Pricing Table Made Easy
      .pricing-table
        .row
          .col-md-6.col-sm-6
            .panel.panel-default
              %header.panel-heading
                %h1 Premium
                .the-price
                  $0.08
                  %span.subscript / per email per month
              .panel-body
                %table.table
                  %tbody
                    %tr
                      %td 3 Accounts
                    %tr.active
                      %td Unlimited Locations
                    %tr
                      %td Unlimited emails
                    %tr.active
                      %td Customer Useage Statistics
              %footer.panel-footer
                %a.btn.btn-default{:href => "/signup"} Sign up now
          .col-md-6.col-sm-6
            .panel.panel-primary
              %header.panel-heading
                %h1 Free
                .the-price
                  Free
                  %span.subscript
              .panel-body
                %table.table
                  %tbody
                    %tr
                      %td 1 Account
                    %tr.active
                      %td 1 Location
                    %tr
                      %td 100 emails per month
                    %tr.active
                      %td Customer Useage Statistics
              %footer.panel-footer
                %a.btn.btn-primary{:href => "/signup"} Sign up now

