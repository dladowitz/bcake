%nav.navbar-default.navbar-static-side{:role => "navigation"}
  .sidebar-collapse
    %ul#side-menu.nav
      %li.nav-header
        .dropdown.profile-element
          %h2
            = link_to "Cake", user_path(current_user)
          %span
            %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
              %span.clear
                %span.block.m-t-xs
                  %strong.font-bold
                    = link_to current_user.first_name.capitalize, edit_user_path(current_user)
            %ul.dropdown-menu.animated.fadeInRight.m-t-xs
              %li
                %a{:href => "login.html"} Logout
        .logo-element
          IN+
      %li{class: ("active" if current_page?(user_path(current_user)))}
        %a{:href => "#{user_path(current_user)}"}
          %i.fa.fa-dashboard.fa-2x
          %span.nav-label My Dashboard
      %li{class: ("active" if current_page?(user_locations_path))}
        %a{:href => "#{user_locations_path}"}
          %i.fa.fa-map-marker.fa-2x
          %span.nav-label Locations
      %li{class: ("active" if current_page?(edit_user_path(current_user)))}
        %a{:href => "#{edit_user_path(current_user)}"}
          %i.fa.fa-user.fa-2x
          %span.nav-label Profile
      - if current_user.admin?
        %li{class: ("active" if current_page?(users_path))}
          %a{:href => "#{users_path}"}
            %i.fa.fa-users.fa-2x
            %span.nav-label Users
