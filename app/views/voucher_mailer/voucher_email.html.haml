%head
  = stylesheet_link_tag  'email/email', media: 'all'

%table.body-wrap
  %tr
    %td
    %td.container{:width => "600"}
      .content
        %table.main{:cellpadding => "0", :cellspacing => "0", :width => "100%"}
          %tr
            %td.content-wrap
              %table{:cellpadding => "0", :cellspacing => "0"}
                %tr
                  %td
                    .signup-header.navy-bg
                      %h1{:style => "color: white"}
                        %span.fsize-40= @location.name
                        %br
                        %span.fsize-40 has a treat for you!
                %tr
                  %td.content-block
                    .fsize-25.mt20
                      This month's treat:
                      -# TODO this breaks if locations don't have a deal. Should figure that shit out
                    .fsize-25.fweight-700
                      - if @is_birthday
                        = @voucher.location.deal.birthday_deal.capitalize
                      - else
                        = @voucher.location.deal.monthly_deal.capitalize
                %tr
                  %td.content-block
                    = link_to "Click here to claim your treat", "http://www.bcake.co/vouchers/#{@voucher.token}", class: "fsize-20 fweight-700"

        .footer
          %table{:width => "100%"}
            %tr
              %td.aligncenter.content-block
                %a{:href => "www.cake.com"} Cake
    %td
