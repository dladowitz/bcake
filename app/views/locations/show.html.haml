.container.img-layer.col-xs-12{:style => "background: url(https://farm9.staticflickr.com/8031/8014760415_67d3966180_c.jpg); background-size: cover;"}
  .row
    .opaque-layer.col-xs-12.col-md-8.col-md-offset-2
      .main_content.col-xs-10.col-xs-offset-1
        %h1.section-title
          %span= @location.name
        %p.subheading
          wants to treat you on your
          %span.green.fsize-70 BIRTHDAY
          %br
          %span.fsize-30 (and every other month)
          %br
          %br
          This month's treat:
          %br
          %span.green
            - if @deal
              = @deal.birthday_deal.titleize
            - else
              something free

        .signup-form
          = simple_form_for @customer, url: signup_location_path do |f|
            = f.input :birthday, label: "Birthday", as: :string, start_year: Time.now.year - 90, end_year: Time.now.year - 8, order: [:month, :day, :year], placeholder: "01-25-1990"
            = f.input :email, placeholder: "tony.start@gmail.com"
            = f.submit value: "Sign Up", class: "btn btn-success sign-up"


