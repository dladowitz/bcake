%header#header.site-header
  = render "landing_pages/header"

.container.img-layer.col-xs-12{:style => "background: url(https://farm9.staticflickr.com/8031/8014760415_67d3966180_c.jpg); background-size: cover;"}
  .row
    .opaque-layer.col-xs-12.col-md-8.col-md-offset-2
      .main_content.col-xs-10.col-xs-offset-1
        %h1.section-title
          %span= @location.name
        %p.subheading
          wants to give you
          %span.green
            - if @deal
              = @deal.birthday_deal.downcase
            - else
              something free
          on your birthday

        .signup-form
          = form_tag signup_location_path do
            .form-group
              = label_tag :birthday
              = date_field_tag :birthday, nil, id: "birthday", placeholder: "10/31/1990", class: "form-control input-lg birthday"

            .form-group
              = label_tag :email
              = email_field_tag :email, nil, class: "form-control", placeholder: "tony.stark@gmail.com"

            = submit_tag "Sign Up", class: "btn btn-success sign-up"

